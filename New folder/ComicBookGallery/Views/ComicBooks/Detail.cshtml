@model ComicBookGallery.Models.ComicBook

@{
    Layout = null;  // Set path to layout page "~/Views/Shared/_Layout.cshtml"
    ViewBag.Title = Model.DisplayText;  //  "Comic Book Detail";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <h1>@Model.SeriesTitle</h1>
        <h2>Issue # @Model.IssueNumber</h2>
        <h5>Description:</h5>
        <h5>@Html.Raw(Model.DescriptionHtml)</h5>
        @if(Model.Artists.Length > 0) {
            <h5>Artists:</h5>
            <div>
            <ul>
                @foreach (var artist in Model.Artists)
                {
                    <li>@artist.Role: @artist.Name</li>
                }
            </ul>
                    </div>
        }
    </div>
</body>
</html>
